function step5Init()
{
    global $jarves;

    $subStep = @$_GET['substep'] + 0;

    if ($subStep == 0 && @$_REQUEST['modules']) {
        $appModifier = new \Jarves\Admin\AppKernelModifier();

        foreach ($_REQUEST['modules'] as $bundleClass => $dummy) {
            $appModifier->addBundle($bundleClass);
        }
        $appModifier->save();
    }

    if ($subStep == 0) {
        $fs = $jarves->getCacheFileSystem();
        if ($fs->has('propel-classes')) {
            $fs->delete('propel-classes');
        }
        if ($fs->has('propel')) {
            $fs->delete('propel');
        }
    }

    if ($subStep > 0) {
        $fn = 'step5_' . $subStep;
        $fn();
        exit;
    }
}

