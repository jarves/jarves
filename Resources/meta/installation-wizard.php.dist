//Installing jarves bundles
function step5_1()
{
    global $jarves, $kernel;

    $bundleManager = new \Jarves\Controller\Admin\BundleManager\ManagerController();
    $bundleManager->setContainer($kernel->getContainer());
    try {

        foreach ($jarves->getBundles() as $bundleName => $bundle) {
            if ($jarves->isJarvesBundle($bundleName)) {
                $bundleManager->installAction($bundleName);
            }
        }

    } catch (Exception $e) {
        step5Failed($e);
    }

    step5Done(true);
}

